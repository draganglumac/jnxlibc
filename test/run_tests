#!/bin/bash
function echo_red()
{
    tput setaf 1
    echo $1
    tput sgr0
}

function echo_green()
{
    tput setaf 2
    echo $1
    tput sgr0
}

echo "Running unit tests..."
pushd test/unit
./run_tests
if [ $? != 0 ]; then
	exit 1
fi
popd 
#echo "Running performance tests"
#pushd test/performance
#./run_tests
#if [ $? != 0 ]; then
#	exit 1
#fi
#popd
exit 0
